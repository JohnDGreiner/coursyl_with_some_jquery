<div id="myModal<%= assignment.id %>" class="modal hide fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Update Assignment Dates</h3>
  </div>
  <div class="modal-body">
    <%= form_for(assignment) do |f| %>
      <%= f.label :active_at, "Starts On:" %>
      <%= f.text_field :active_at, class: "modal-date" %><br>
      <%= f.label :due_at, "Ends On:" %>
      <%= f.text_field :due_at, class: "modal-date" %>
  </div>
  <div class="modal-footer">
      <%= submit_tag "Update", class: "btn btn-success" %>
    <% end %>
  </div>
</div>
